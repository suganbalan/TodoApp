@model List<TodoApp.Models.TodoItem>
@{
    ViewData["Title"] = "My To-Do List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-list-check"></i> My To-Do List</h3>
        </div>

        <div class="card-body">
            <!-- Add Task Form -->
            <form method="post" asp-action="Add" class="input-group mb-4">
                @Html.AntiForgeryToken()
                <input type="text" name="task" class="form-control"
                    placeholder="Enter a task..." required />
                <button class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add Task
                </button>
            </form>

           

            <!-- Task Table -->
            @if (Model.Count == 0)
            {
                <p class="text-center text-muted">No tasks added yet 😌</p>
            }
            else
            {
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Task</th>
                            <th>Status</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="@((item.IsDone ? "text-decoration-line-through text-muted" : ""))">
                                    @item.Task
                                </td>

                                <td>
                                    @if (item.IsDone)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Done</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                </td>

                                <td>
                                    @if (!item.IsDone)
                                    {
                                        <a asp-action="Done" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-success me-2">
                                            <i class="bi bi-check2-circle"></i>
                                        </a>
                                    }
                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
